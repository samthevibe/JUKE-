// index.js
const express = require('express');
const app = express();
const PORT = process.env.PORT || 3000;

app.get('/', (req, res) => {
  res.send('JUKE app is live!');
});

app.listen(PORT, () => {
  console.log(`Server running on port ${PORT}`);
});
{
  "name": "juke",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
